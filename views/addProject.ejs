<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css">
  <title>Add Project</title>
</head>
<body class="bg-gray-900 text-white">

  <!-- Navbar -->
  <%- include('partials/navbar', { page: '/solutions/addProject' }) %>

  <!-- Hero Section -->
  <section class="container mx-auto my-8 text-center">
    <h1 class="text-4xl font-bold text-blue-400">Add Project</h1>
    <p class="mt-4 text-gray-300">Fill in the details below to add a new project.</p>
  </section>

  <!-- Add Project Form -->
  <section class="container mx-auto bg-gray-800 p-8 rounded-lg shadow-lg">
    <form action="/solutions/addProject" method="POST" class="space-y-6">
      
      <!-- Title -->
      <div>
        <label for="title" class="block text-gray-200 font-medium">Title</label>
        <input
          type="text"
          id="title"
          name="title"
          class="w-full p-2 border border-gray-600 bg-gray-700 text-white rounded"
          required
        />
      </div>

      <!-- Feature Image URL -->
      <div>
        <label for="feature_img_url" class="block text-gray-200 font-medium">Feature Image URL</label>
        <input
          type="url"
          id="feature_img_url"
          name="feature_img_url"
          class="w-full p-2 border border-gray-600 bg-gray-700 text-white rounded"
          required
        />
      </div>

      <!-- Sector -->
      <div>
        <label for="sector_id" class="block text-gray-200 font-medium">Sector</label>
        <select
          id="sector_id"
          name="sector_id"
          class="w-full p-2 border border-gray-600 bg-gray-700 text-white rounded"
          required
        >
          <% sectors.forEach(sector => { %>
            <option value="<%= sector.id %>" class="bg-gray-700"><%= sector.sector_name %></option>
          <% }) %>
        </select>
      </div>

      <!-- Intro Short -->
      <div>
        <label for="intro_short" class="block text-gray-200 font-medium">Intro Short</label>
        <textarea
          id="intro_short"
          name="intro_short"
          class="w-full p-2 border border-gray-600 bg-gray-700 text-white rounded"
          rows="4"
          required
        ></textarea>
      </div>

      <!-- Summary Short -->
      <div>
        <label for="summary_short" class="block text-gray-200 font-medium">Summary Short</label>
        <textarea
          id="summary_short"
          name="summary_short"
          class="w-full p-2 border border-gray-600 bg-gray-700 text-white rounded"
          rows="4"
          required
        ></textarea>
      </div>

      <!-- Impact -->
      <div>
        <label for="impact" class="block text-gray-200 font-medium">Impact</label>
        <textarea
          id="impact"
          name="impact"
          class="w-full p-2 border border-gray-600 bg-gray-700 text-white rounded"
          rows="4"
          required
        ></textarea>
      </div>

      <!-- Original Source URL -->
      <div>
        <label for="original_source_url" class="block text-gray-200 font-medium">Original Source URL</label>
        <input
          type="url"
          id="original_source_url"
          name="original_source_url"
          class="w-full p-2 border border-gray-600 bg-gray-700 text-white rounded"
          required
        />
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button
          type="submit"
          class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded"
        >
          Submit
        </button>
      </div>
    </form>
  </section>
</body>
</html>
