<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css">
  <title>Register</title>
</head>
<body class="bg-gray-900 text-white">

  <!-- Navbar -->
  <%- include('partials/navbar', { page: '' }) %>

  <!-- Hero Section -->
  <section class="container mx-auto my-8 text-center">
    <h1 class="text-4xl font-bold text-blue-400">Register</h1>
    <p class="mt-4 text-gray-300">Create your account below.</p>
  </section>

  <!-- Registration Form -->
  <section class="container mx-auto bg-gray-800 p-8 rounded-lg shadow-lg">
    <form action="/register" method="POST" class="space-y-6">
      <% if (errorMessage) { %>
        <div class="text-red-500 font-semibold"><%= errorMessage %></div>
      <% } %>
      <% if (successMessage) { %>
        <div class="text-green-500 font-semibold"><%= successMessage %></div>
      <% } %>

      <!-- Username -->
      <div>
        <label for="userName" class="block text-gray-200 font-medium">Username</label>
        <input
          type="text"
          id="userName"
          name="userName"
          value="<%= userName %>"
          class="w-full p-2 border border-gray-600 bg-gray-700 text-white rounded"
          required
        />
      </div>

      <!-- Email -->
      <div>
        <label for="email" class="block text-gray-200 font-medium">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full p-2 border border-gray-600 bg-gray-700 text-white rounded"
          required
        />
      </div>

      <!-- Password -->
      <div>
        <label for="password" class="block text-gray-200 font-medium">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="w-full p-2 border border-gray-600 bg-gray-700 text-white rounded"
          required
        />
      </div>

      <!-- Confirm Password -->
      <div>
        <label for="password2" class="block text-gray-200 font-medium">Confirm Password</label>
        <input
          type="password"
          id="password2"
          name="password2"
          class="w-full p-2 border border-gray-600 bg-gray-700 text-white rounded"
          required
        />
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button
          type="submit"
          class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded"
        >
          Register
        </button>
      </div>
    </form>
  </section>
</body>
</html>
