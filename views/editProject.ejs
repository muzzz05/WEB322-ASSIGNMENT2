<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css">
  <title>Edit Project - <%= project.title %></title>
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar', { page: '' }) %>

  <!-- Hero Section -->
  <section class="container mx-auto my-8 text-center">
    <h1 class="text-4xl font-bold">Edit Project</h1>
    <p class="mt-2 text-xl">Editing: <strong><%= project.title %></strong></p>
  </section>

  <!-- Edit Project Form -->
  <section class="container mx-auto bg-gray-100 p-8 rounded-lg shadow-lg">
    <form action="/solutions/editProject" method="POST" class="space-y-6">
      <!-- Hidden ID Field -->
      <input type="hidden" name="id" value="<%= project.id %>">

      <!-- Title -->
      <div>
        <label for="title" class="block text-gray-700 font-medium">Title</label>
        <input
          type="text"
          id="title"
          name="title"
          class="w-full p-2 border border-gray-300 rounded"
          value="<%= project.title %>"
          required
        />
      </div>

      <!-- Feature Image URL -->
      <div>
        <label for="feature_img_url" class="block text-gray-700 font-medium">Feature Image URL</label>
        <input
          type="url"
          id="feature_img_url"
          name="feature_img_url"
          class="w-full p-2 border border-gray-300 rounded"
          value="<%= project.feature_img_url %>"
          required
        />
      </div>

      <!-- Sector -->
      <div>
        <label for="sector_id" class="block text-gray-700 font-medium">Sector</label>
        <select
          id="sector_id"
          name="sector_id"
          class="w-full p-2 border border-gray-300 rounded"
          required
        >
          <% sectors.forEach(sector => { %>
            <option 
              value="<%= sector.id %>" 
              <%= (project.sector_id === sector.id) ? "selected" : "" %>
            >
              <%= sector.sector_name %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Intro Short -->
      <div>
        <label for="intro_short" class="block text-gray-700 font-medium">Intro Short</label>
        <textarea
          id="intro_short"
          name="intro_short"
          class="w-full p-2 border border-gray-300 rounded"
          rows="4"
          required
        ><%= project.intro_short %></textarea>
      </div>

      <!-- Summary Short -->
      <div>
        <label for="summary_short" class="block text-gray-700 font-medium">Summary Short</label>
        <textarea
          id="summary_short"
          name="summary_short"
          class="w-full p-2 border border-gray-300 rounded"
          rows="4"
          required
        ><%= project.summary_short %></textarea>
      </div>

      <!-- Impact -->
      <div>
        <label for="impact" class="block text-gray-700 font-medium">Impact</label>
        <textarea
          id="impact"
          name="impact"
          class="w-full p-2 border border-gray-300 rounded"
          rows="4"
          required
        ><%= project.impact %></textarea>
      </div>

      <!-- Original Source URL -->
      <div>
        <label for="original_source_url" class="block text-gray-700 font-medium">Original Source URL</label>
        <input
          type="url"
          id="original_source_url"
          name="original_source_url"
          class="w-full p-2 border border-gray-300 rounded"
          value="<%= project.original_source_url %>"
          required
        />
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button
          type="submit"
          class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded"
        >
          Update Project
        </button>
      </div>
    </form>

    <!-- Delete Project Button -->
    <div class="text-center mt-8">
      <a 
        href="/solutions/deleteProject/<%= project.id %>" 
        class="btn btn-error text-white bg-red-500 hover:bg-red-600 py-2 px-6 rounded"
      >
        Delete Project
      </a>
    </div>
  </section>
</body>
</html>
